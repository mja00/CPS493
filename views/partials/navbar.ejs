<!-- New Peep Modal -->
<div class="modal" tabindex="-1" role="dialog" id="newPeepModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Peep</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <% if (!session.loggedIn) { %>
                    <p>You must be logged in to peep.</p>
                <% } else { %>
                    <form action="/peep" method="POST" id="peepForm">
                        <div class="form-group">
                            <textarea class="form-control" id="peep" name="peep" rows="3"></textarea>
                        </div>
                    </form>
                    <% } %>
            </div>
            <div class="modal-footer">
                <% if (session.loggedIn) { %>
                    <button type="button" class="btn btn-primary" form="peepForm">Post Peep</button>
                <% } %>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>